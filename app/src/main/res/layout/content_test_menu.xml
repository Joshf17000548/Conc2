<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Head Injury Assessment 1"
        android:background="@drawable/hia_button_selector"
        android:layout_gravity="center_horizontal"
        android:id="@+id/buttonHIA1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Head Injury Assessment 2"
        android:background="@drawable/hia_button_selector"
        android:layout_gravity="center_horizontal"
        android:id="@+id/buttonHIA2"
        android:layout_below="@+id/buttonHIA1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Head Injury Assessment 3"
        android:background="@drawable/hia_button_selector"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/buttonHIA2"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonHIA3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Baseline"
        android:background="@drawable/baseline_selector"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/buttonHIA3"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonBaseline"
        android:layout_centerHorizontal="true"
        tools:background="@drawable/baseline_selector" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:id="@+id/HIAtable"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/buttonBaseline"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TableRow
                android:id="@+id/titletext"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:textColor="@color/textPrimary"
                    android:layout_height="35dp"
                    android:id="@+id/testtitle"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Test"/>

                <TextView
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_height="35dp"
                    android:textColor="@color/textPrimary"
                    android:id="@+id/testdate"
                    android:layout_column="2"
                    android:text="Date"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:textStyle="bold"
                    android:id="@+id/testresult"
                    android:textColor="@color/textPrimary"
                    android:text="Result"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"/>

            </TableRow>

            <View android:layout_width="match_parent"
                android:background="#BCAAA4"
                android:layout_height="2dp" />

            <TableRow
                android:id="@+id/HIA1text"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:textColor="@color/textPrimary"
                    android:layout_height="35dp"
                    android:id="@+id/test1"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="-"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:textColor="@color/textPrimary"
                    android:id="@+id/test1date"
                    android:layout_column="2"
                    android:text="-"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/test1result"
                    android:textColor="@color/textPrimary"
                    android:text="-"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"/>

            </TableRow>

            <View android:layout_width="match_parent"
                android:background="#BCAAA4"
                android:layout_height="2dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/HIA12text">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/test2"
                    android:textColor="@color/textPrimary"
                    android:text="-"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/test2date"
                    android:textColor="@color/textPrimary"
                    android:text="-"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/test2result"
                    android:textColor="@color/textPrimary"
                    android:text="-"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"/>

            </TableRow>

            <View android:layout_width="match_parent"
                android:background="#BCAAA4"
                android:layout_height="2dp" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/HIA13text">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/test3"
                    android:textColor="@color/textPrimary"
                    android:text="-"

                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/test3date"
                    android:textColor="@color/textPrimary"
                    android:text="-"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/test3result"
                    android:textColor="@color/textPrimary"
                    android:text="-"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"/>

            </TableRow>

            <View android:layout_width="match_parent"
                android:background="#BCAAA4"
                android:layout_height="2dp" />

        </TableLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/HIAtable"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Baselinetext">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/Baselinetitle"
                    android:textColor="@color/textPrimary"
                    android:text="Baseline"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/Basleinedate"
                    android:textColor="@color/textPrimary"
                    android:text="-"
                    android:textStyle="bold"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:id="@+id/Baselinevalid"
                    android:text="-"
                    android:textStyle="bold"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical" />

            </TableRow>
        </TableLayout>
    </FrameLayout>
</RelativeLayout>